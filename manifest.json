{
  "manifest_version": 2,

  "name": "Slingify",
  "description": "This extension notifies you all important events happening in SlingTv o)))",
  "version": "1.0",

  "browser_action": {
    "default_icon": "slingify_logo1.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["myscript.js"]
    }
  ]
}
