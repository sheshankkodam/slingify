{
  "manifest_version": 2,

  "name": "Slingify",
  "description": "This extension notifies you all important events happening in SlingTv o)))",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/slingify_logo1.png"
  },
  "icons": {
    "64": "images/slingify_icon.png"
  },
  "background":{
    "page": "background.html"
  },
  "permissions": ["notifications","https://twitter.com/slingify", "https://twitter.com/i/notifications", "https://pbs.twimg.com/media/*"],

  "content_security_policy":"script-src 'self' https://twitter.com/slingify https://pbs.twimg.com/media/*; object-src 'self'"

}
